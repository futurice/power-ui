{
  "name": "power-ui",
  "private": true,
  "version": "1.0.0",
  "description": "power.futurice.com new UI",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src/**/*.js; exit 0",
    "watch:lint": "esw -w src/**/*.js",
    "prewatch:js": "cd node_modules && ln -nsf ../src power-ui",
    "watch:js": "watchify -g envify -t babelify src/index.js --debug -v -o dist/index.js",
    "watch:static": "cpx \"src/static/**/*\" dist --watch",
    "watch": "npm run watch:js & npm run watch:static & npm run watch:lint &"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futurice/power-ui.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/futurice/power-ui/issues"
  },
  "homepage": "https://github.com/futurice/power-ui#readme",
  "dependencies": {
    "@cycle/core": "3.1.x",
    "@cycle/dom": "5.1.x",
    "@cycle/http": "3.1.x",
    "babel": "^5.8.21",
    "babelify": "^6.1.3",
    "browserify": "^11.0.1",
    "envify": "^3.4.0",
    "lodash": "^3.10.1",
    "uglify-js": "^2.4.24"
  },
  "devDependencies": {
    "babel-eslint": "^4.0.5",
    "cpx": "^1.2.1",
    "eslint": "^1.1.0",
    "eslint-watch": "^1.2.5",
    "watchify": "^3.3.1"
  }
}
